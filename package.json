{
  "name": "nestjs-rpc",
  "version": "0.0.1",
  "description": "A simple RPC implementation for NestJS",
  "author": "Dario Ielardi <dario.ielardi@gmail.com>",
  "license": "MIT",
  "readmeFilename": "README.md",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "*.md"
  ],
  "scripts": {
    "start:dev": "tsc -w",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "keywords": [
    "nestjs",
    "rpc"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/darioielardi/nestjs-rpc"
  },
  "bugs": "https://github.com/darioielardi/nestjs-rpc",
  "peerDependencies": {
    "@nestjs/common": "^7.4.3",
    "@nestjs/swagger": "^4.6.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@nestjs/common": "^7.4.3",
    "@nestjs/core": "^7.4.3",
    "@nestjs/platform-express": "^7.4.3",
    "@nestjs/swagger": "^4.6.0",
    "@nestjs/testing": "^7.4.3",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.1",
    "@types/supertest": "^2.0.10",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
